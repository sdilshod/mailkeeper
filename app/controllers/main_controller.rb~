# encoding: utf-8

class MainController < ApplicationController
	before_filter :check_authorize

	def index
	  b_type = params[:e_type] || "inner"
		@emails = Email.where(:box_type => b_type ).order('date_ desc')
	end
	
	def new
		@email = Email.new
	end
	
	def create
		@email = Email.new params[:email]
	  @email.email_attachments.build params[:email_attachments]
		if @email.send_mail current_user.login, current_user.password
		  redirect_to :action => 'index'
		else
			flash[:error]="Ошибка в сохранение почты"
		  render :action => 'new'
		end
	end
	
	def get_latest
	  Email.get_latest current_user.login, current_user.password, params[:e_type]
	  redirect_to :action => 'index'
	end
	
	def show
		@email = Email.find params[:id]
	end

	def download
		e_attach = EmailAttachment.find(params[:id])
		if e_attach
			send_file e_attach.attached_file.path,
              :filename => e_attach.attached_file_file_name,
              :type => e_attach.attached_file_content_type
#              :disposition => 'attachment'			
		end
	end	
	
end
